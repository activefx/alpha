!!! 5
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %title= content_for?(:title) ? yield(:title) : "Alpha"
    = yield :head_append
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      %script{ :src => "http://html5shim.googlecode.com/svn/trunk/html5.js" }
    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
    = yield :head

  %body.administration
    .navbar.navbar-fixed-top
      .navbar-inner
        .container-fluid
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{:href => "#"} Alpha
          .nav-collapse
            %ul.nav
              //%li= link_to "Link 1", "/path1"
              //%li= link_to "Link 2", "/path2"
              //%li= link_to "Link 3", "/path3"
            %ul.nav.pull-right
              %li= link_to "Sign Out", destroy_administrator_session_path

    .container-fluid
      .row-fluid
        .span3
          .well.sidebar-nav
            %ul.nav.nav-list
              %li.nav-header Accounts
              %li= link_to "Beta Signups", admin_beta_signups_path
              %li= link_to "Users", admin_users_path
              %li= link_to "Administrators", admin_administrators_path
        .span9
          = flash_messages
          = yield

    .container-fluid
      %footer
        %p &copy; Alpha 2012

