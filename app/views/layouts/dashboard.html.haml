!!!
%html
  %head
    %meta{ "http-equiv" => "Content-Type", "content" => "text/html; charset=utf-8" }
    %meta{ "name" => "viewport", "content" => "width=device-width, initial-scale=1.0" }
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}
    %meta{ :name => "current-user", :content => UserSerializer.new(current_user).to_json(root: false) }
    %title= content_for?(:title) ? yield(:title) : "Civvic"
    = yield :stripe
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      %script{ :src => "http://html5shim.googlecode.com/svn/trunk/html5.js" }
    = stylesheet_link_tag    "http://fonts.googleapis.com/css?family=Lato:300,400,700,900,300italic,400italic,700italic,900italic"
    = stylesheet_link_tag    "application", media: "screen, projection"
    = stylesheet_link_tag    "dashboard",   media: "screen, projection"
    / = stylesheet_link_tag    "print",       media: "print"
    / /[if IE]
    /   = stylesheet_link_tag  "ie",          media: "screen, projection"
    = javascript_include_tag "dashboard"
    = csrf_meta_tags
    = yield :head
  %body
    #container
      = yield
